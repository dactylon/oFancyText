{
  "atom": {
    "rewriteTsconfig": false
  },
  "compilerOptions": {
    "baseUrl": "src",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noLib": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["./src/**/*.ts"]
}
